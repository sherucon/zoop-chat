{
    "expo": {
        "name": "zoop",
        "slug": "zoop",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "zoop",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.sherucon.zoop",
            "googleServicesFile": "./GoogleService-Info.plist",
            "infoPlist": {
                "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can select a profile picture."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "bundleIdentifier": "com.sherucon.zoop",
            "googleServicesFile": "./google-services.json",
            "package": "com.sherucon.zoop"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/zoop-trans-logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#2E2E2E"
                }
            ],
            [
                "expo-build-properties",
                {
                    "ios": {
                        "useFrameworks": "static"
                    }
                }
            ],
            "@react-native-firebase/app",
            "@react-native-firebase/auth",
            "expo-web-browser",
            "@react-native-google-signin/google-signin"
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "c703ba78-7837-4a84-ab53-6d62de1e42d6"
            }
        }
    }
}
